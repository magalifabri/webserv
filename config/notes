listen 8080										# port
server_name 0.0.0.0								# server name
error_page [code] ... www/errors/<code>.html	# default error page(s)
root www										# root
index index.html								# default file to answer if request is a directory
autoindex off									# turn directory listing on|off
client_max_body_size 1m							# limit client body size
accepted_methods GET POST DELETE							# list of accepted HTTP methods
cgi_pass path/to/cgi							# execute CGI
upload_path <server_root>/tmp/uploads			# path to save uploaded files
return [code] (redirection)						# HTTP redirection
